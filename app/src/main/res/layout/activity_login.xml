<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.labs.maverick.a116.activities.LoginActivity">

    <TextView
        android:layout_width="286dp"
        android:layout_height="65dp"
        android:text="@string/text_login"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorLetter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:id="@+id/textView"
        tools:layout_editor_absoluteY="236dp"
        tools:layout_editor_absoluteX="51dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="148dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo116"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="131dp" />

    <EditText
        android:id="@+id/nameloginEditText"
        android:layout_width="@dimen/button_widht"
        android:layout_height="@dimen/button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/colorLetter"
        android:textColor="@color/colorPrimaryDark"
        android:ems="10"
        android:padding="10dp"
        android:textColorHint="@color/colorHint"
        android:hint="@string/hint_nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="33dp" />

    <EditText
        android:id="@+id/phoneloginEditText"
        android:layout_width="@dimen/button_widht"
        android:layout_height="@dimen/button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorHint"
        android:inputType="phone"
        android:padding="10dp"
        android:hint="@string/hint_telefono"
        android:background="@color/colorLetter"
        app:layout_constraintTop_toBottomOf="@+id/nameloginEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="34dp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="@dimen/button_widht"
        android:layout_height="@dimen/button_height"
        android:text="Ingresar"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorLetter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/phoneloginEditText"
        tools:layout_editor_absoluteX="38dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="99dp"
        android:layout_height="90dp"
        android:src="@drawable/bomberos"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="418dp" />

</android.support.constraint.ConstraintLayout>
