<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    tools:context="com.labs.maverick.a116.activities.VerifyActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="317dp"
        android:layout_height="53dp"
        android:text="@string/ingresa_codigo_text"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorLetter"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="@dimen/button_widht"
        android:layout_height="@dimen/button_height"
        android:background="@color/colorLetter"
        android:ems="10"
        android:padding="10dp"
        android:hint="C贸digo de verificaci贸n"
        android:inputType="textPersonName"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/confirmarcodigoButton"
        android:layout_width="@dimen/button_widht"
        android:layout_height="@dimen/button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorLetter"
        android:text="Confirmar"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codeEditText" />

    <Button
        android:id="@+id/reenviarcodigoButton"
        android:layout_width="@dimen/button_widht"
        android:layout_height="@dimen/button_height"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Reenviar c贸digo"
        android:background="@drawable/button_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmarcodigoButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="301dp"
        android:layout_height="90dp"
        android:text="El c贸digo que ingresaste no es correcto, intenta nuevamente"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/colorLetter"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/reenviarcodigoButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintVertical_bias="0.29" />
</android.support.constraint.ConstraintLayout>
